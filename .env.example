# Claude Code Sub-Agent System Configuration
# Copy this file to .env and fill in your actual values

# Core Configuration
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# LLM Configuration (Required)
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_BASE_URL=https://api.openai.com/v1

# External Tool APIs (Optional - only needed if using specific integrations)
# GitHub Integration
GITHUB_TOKEN=ghp_your-github-token-here

# Figma Integration  
FIGMA_ACCESS_TOKEN=figd_your-figma-token-here

# Jira Integration
JIRA_API_TOKEN=ATATT3xFfGF0your-jira-token-here
JIRA_BASE_URL=https://your-domain.atlassian.net

# Orchestration Settings
MAX_PARALLEL_AGENTS=5
CONTEXT_RETENTION_DAYS=30
QUALITY_GATE_TIMEOUT=300

# Context Management
CONTEXT_STORAGE_BACKEND=local
CONTEXT_DB_URL=
CONTEXT_MAX_SIZE_MB=100

# Agent Configuration
AGENT_TIMEOUT=1800
AGENT_RETRY_ATTEMPTS=3
AGENT_RETRY_DELAY=5

# Security Settings
ENABLE_SECURITY_SCANNING=true
SECURITY_SCAN_TIMEOUT=300

# Performance Settings
MAX_CONCURRENT_WORKFLOWS=10
WORKFLOW_CHECKPOINT_INTERVAL=300

# External Service Timeouts (seconds)
GITHUB_API_TIMEOUT=30
FIGMA_API_TIMEOUT=30
JIRA_API_TIMEOUT=30